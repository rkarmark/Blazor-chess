    class Brick {
        int x;
        int y;
        string? type;
        string? color;

        public Brick(int x, int y, string? type, string? color)
        {
            x = this.x;
            y = this.y;
            type = this.type;
            color = this.color;
        }

        string getImage()
        {
            string colorchar;
            string typechar = "";

            if (color == "white")
            {
                colorchar = "l";
            }
            else
            {
                colorchar = "d";
            }

            switch (type)
            {
                case "Queen":
                    typechar = "q";
                    break;
                case "King":
                    typechar = "k";
                    break;
                case "Pawn":
                    typechar = "p";
                    break;
                case "Knight":
                    typechar = "n";
                    break;
            }
            return ("./images/" + typechar + colorchar + ".svg");
        }
    }
    void clicked(int x, int y) {
        Console.WriteLine(x + "," + y);

@page "/"

<div class="content">
    <div class="board">
        @for (int i = 0; i < 8; i++)
        {
            <div>
                @for (int j = 0; j < 8; j++)
                    {
                        int k = j;
                        int h = i;
                        <div class="box"
                             style="@((i - j) % 2 == 0 ? "background-color: Moccasin;" : "background-color: Peru;")
                                    @(board[k,h] ? "border:2px" : "")"
                             @onclick="() => clicked(h, k)"
                             >
                            <img class="image" src="./images/bd.svg" />
                        </div>
                    }
            </div>
        }
    </div>
</div>
